{% extends 'admin/statistics/_stats_base.html.twig' %}

{% block breadcrumb %}{% endblock %}

{% block stats_content %}
<section class="container">
    <h1>Statistiques sources internes</h1>
</section>

<section class="container mt-5">

    <div class="mt-5">
        {{ form_start(formDateRange) }}
        <div class="d-flex">
            <div class="d-flex me-3">
                {{ form_row(formDateRange.dateMin) }}
            </div>
            <div class="d-flex me-3">
                {{ form_row(formDateRange.dateMax) }}
            </div>
            <div class="d-flex me-3">
                <button type="submit" class="btn btn-primary">Valider</button>
            </div>
        </div>
        {{ form_end(formDateRange) }}
    </div>

    <div class="my-4">
        <h2>Sources des recherches</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Source</th>
                    <th scope="col">Nombre de recherche</th>
                </tr>
            </thead>
            <tbody>
                {% for source in nbSearchBySource %}
                    <tr>
                        <td>
                            {{ source.source }}
                        </td>
                        <td>{{ source.nb }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="my-4">
        <h2>Sources des vues</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Source</th>
                    <th scope="col">Nombre de vues</th>
                </tr>
            </thead>
            <tbody>
                {% for source in nbViewBySource %}
                    <tr>
                        <td>
                            {{ source.source }}
                        </td>
                        <td>{{ source.nb }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="my-4">
        <h2>Sources des clics candidater</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Source</th>
                    <th scope="col">Nombre de vues</th>
                </tr>
            </thead>
            <tbody>
                {% for source in nbApplicationUrlClickBySource %}
                    <tr>
                        <td>
                            {{ source.source }}
                        </td>
                        <td>{{ source.nb }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="my-4">
        <h2>Sources des clics plus d'informations</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Source</th>
                    <th scope="col">Nombre de vues</th>
                </tr>
            </thead>
            <tbody>
                {% for source in nbOriginUrlClickBySource %}
                    <tr>
                        <td>
                            {{ source.source }}
                        </td>
                        <td>{{ source.nb }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>


    <div class="my-4">
        <h2>Sources des favoris</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Source</th>
                    <th scope="col">Nombre de vues</th>
                </tr>
            </thead>
            <tbody>
                {% for source in nbFavoriteBySource %}
                    <tr>
                        <td>
                            {{ source.source }}
                        </td>
                        <td>{{ source.nb }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</section>
{% endblock %}
