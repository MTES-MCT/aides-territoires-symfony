<dialog aria-labelledby="fr-modal-title-match-aid" role="dialog" id="match-aid-modal" class="fr-modal">
	<div class="fr-container fr-container--fluid fr-container-md">
		<div class="fr-grid-row fr-grid-row--center">
			<div class="fr-col-12 fr-col-md-8 fr-col-lg-6">
				<div class="fr-modal__body">
					<div class="fr-modal__header">
						<button class="fr-btn fr-btn--close" title="Fermer la fenêtre modale" aria-controls="match-aid-modal">Fermer</button>
					</div>
					<div class="fr-modal__content">
						{% if app.user %}
							{{ form_start(formAddToProject)}}
							<h2 id="fr-modal-title-modal-1" class="fr-modal__title">
								<span class="fr-h1 fr-icon-arrow-right-line fr-icon--lg"></span>Ajouter cette aide à un projet existant</h2>
							{% if formAddToProject.projects is defined %}
								{{ form_row(formAddToProject.projects) }}
							{% endif %}
							<h2 id="fr-modal-title-modal-1" class="fr-modal__title">
								<span class="fr-h1 fr-icon-arrow-right-line fr-icon--lg"></span>Ajouter cette aide à un nouveau projet</h2>
							{{ form_row(formAddToProject.newProject) }}
							<footer>
								<button class="btn-block fr-btn fr-mt-2w" type="submit">
									Ajouter cette aide
								</button>
							</footer>
							{{ form_end(formAddToProject)}}
						{% else %}
							<p>
								<a href="{{ path('app_login') }}">Connectez-vous</a>
								ou
								<a href="#">créez un compte</a>
								afin d’ajouter cette aide à vos projets !
							</p>
						{% endif %}
					</div>
				</div>
			</div>
		</div>
	</div>
</dialog>
