{% for promotion in blogPromotionPosts %}
	<div class="fr-card fr-card--horizontal fr-mb-5w">
		<div class="fr-card__body">
			<div class="fr-card__content">
				<h3 class="fr-card__title">
					{{ promotion.name }}
				</h3>
				{% if promotion.shortText %}
					<div class="fr-card__desc fr-mt-3w">{{ promotion.shortText|sanitize_html|raw }}</div>
				{% endif %}
			</div>
			<div class="fr-card__footer">
				<ul class="fr-btns-group fr-btns-group--inline-reverse fr-btns-group--inline-lg">
					<li id="promotion-block-link">
						<a id="{{ promotion.id }}" href="{{ promotion.buttonLink }}" {% if promotion.externalLink %} target="_blank" rel="noopener" {% endif %} class="fr-btn fr-btn--secondary btn-blog-promotion-post">
							{{ promotion.buttonTitle }}
						</a>
					</li>
				</ul>
			</div>
		</div>
		<div class="fr-card__header">
			<div class="fr-card__img">
				{% if promotion.image %}
					<img class="fr-responsive-img" src="{{ getParameter('cloud_image_url') }}{{ promotion.image }}" alt="{{ promotion.imageAltText }}"/>
				{% endif %}
			</div>
		</div>
	</div>
{% endfor %}
