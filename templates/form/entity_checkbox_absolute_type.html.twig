{% block entity_checkbox_absolute_type_row %}
    <div class="entity-checkbox-absolute-type-wrapper fr-input-group">
        {% if form.vars.label %}
        <label class="fr-label"><span class="at-field-label">{{ form.vars.label }}</span></label>
        {% endif %}
        <div class="opener">{% if form.vars.errors.form.config.attributes['data_collector/passed_options'].placeholder is defined and form.vars.errors.form.config.attributes['data_collector/passed_options'].placeholder %}{{ form.vars.errors.form.config.attributes['data_collector/passed_options'].placeholder }}{% else %}SÃ©lectionnez{% endif %}</div>
        <div class="checkboxes-wrapper">
            {% for child in form.children %}
                {%- set widget_attr = {} -%}
                {%- if help is not empty -%}
                    {%- set widget_attr = {attr: {'aria-describedby': id ~"_help"}} -%}
                {%- endif -%}
                {% set widget_attr = widget_attr|merge({'attr': {'autocomplete': 'off'}}) %}
                {% set row_attr = row_attr|merge({'class': (row_attr.class|default('') ~ ' fr-input-group')|trim}) %}
                <div class="fr-fieldset__element" aria-selected="false">
                    <div class="fr-checkbox-group">
                    {{- form_errors(child) -}}
                    {{- form_widget(child, widget_attr) -}}
                    {{- form_label(child) -}}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    {{ form_errors(form) }}
{% endblock %}