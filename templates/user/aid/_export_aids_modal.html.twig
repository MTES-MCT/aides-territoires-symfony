<dialog aria-labelledby="fr-modal-title-export-aids" role="dialog" id="export-aids-modal-{{ app.user.id }}" class="fr-modal">
    <div class="fr-container fr-container--fluid fr-container-md">
        <div class="fr-grid-row fr-grid-row--center">
            <div class="fr-col-12 fr-col-md-8 fr-col-lg-6">
                <div class="fr-modal__body">
                    <div class="fr-modal__header">
                        <button class="fr-btn fr-btn--close" title="Fermer la fenêtre modale" aria-controls="export-aids-modal-{{ app.user.id }}">Fermer</button>
                    </div>
                    <div class="fr-modal__content">
                        <h1 id="fr-modal-title-export-aids" class="fr-modal__title"><span class="fr-icon-arrow-right-line fr-icon--lg"></span>Exporter les aides</h1>

                        <p>Les champs marqués d’un astérisque (*) sont obligatoires.</p>

                        {{ form_start(formExport)}}
                            {{ form_row(formExport.format) }}
                            <div class="fr-input-group">
                                <button class="btn-block fr-btn fr-mt-2w" type="submit">
                                    Exporter toutes les aides de votre structure
                                </button>
                            </div>
                        {{ form_end(formExport)}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</dialog>